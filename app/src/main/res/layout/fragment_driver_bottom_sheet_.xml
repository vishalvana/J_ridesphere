<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragmentcurves"

    tools:context=".Driver_bottom_sheet_Fragment">


    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/from_des"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="40dp"

        android:layout_marginEnd="52dp"
        android:background="@drawable/rounded_edittext"

        android:hint="From"
        android:padding="20dp"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TO_des"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"

        android:background="@drawable/rounded_edittext"
        android:hint="To"
        android:padding="20dp"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/from_des"
        app:layout_constraintStart_toStartOf="@+id/from_des"
        app:layout_constraintTop_toBottomOf="@+id/from_des" />

    <EditText
        android:id="@+id/fare"
        android:layout_width="329dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_edittext"
        android:drawableRight="@drawable/baseline_currency_rupee_24"
        android:hint="Fare"
        android:padding="20dp"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/TO_des"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TO_des"
        app:layout_constraintTop_toBottomOf="@+id/TO_des" />

    <Button
        android:id="@+id/Find_ride"
        android:layout_width="334dp"
        android:layout_height="69dp"

        android:layout_marginTop="12dp"
        android:backgroundTint="#88DA09"
        android:gravity="center"
        android:text="Find Ride"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fare"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/fare"
        app:layout_constraintTop_toBottomOf="@+id/fare"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>