<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragmentcurves"

    tools:context=".Driver_bottom_sheet_Fragment">


    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/from_des"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"

        android:layout_marginEnd="35dp"
        android:background="@drawable/rounded_edittext"

        android:hint="From"
        android:padding="20dp"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TO_des"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"

        android:background="@drawable/rounded_edittext"
        android:hint="To"
        android:padding="20dp"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/from_des"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/from_des"
        app:layout_constraintTop_toBottomOf="@+id/from_des" />

    <RadioGroup
        android:id="@+id/vehicleTypeRadioGroup"
        android:layout_width="264dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TO_des"
        app:layout_constraintHorizontal_bias="0.656"
        app:layout_constraintStart_toStartOf="@+id/TO_des"
        app:layout_constraintTop_toBottomOf="@+id/TO_des"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/bikeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bike"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/carRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/vanRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Van"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/truckRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Truck"
            android:textColor="@color/white" />
    </RadioGroup>

    <Button
        android:id="@+id/Find_ride"
        android:layout_width="334dp"
        android:layout_height="69dp"

        android:layout_marginTop="12dp"
        android:backgroundTint="#88DA09"
        android:gravity="center"
        android:text="Find Ride"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TO_des"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/TO_des"
        app:layout_constraintTop_toBottomOf="@+id/vehicleTypeRadioGroup"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>